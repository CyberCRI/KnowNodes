div.resource.row
  .map.span1
    img(src="/img/node.png").node
  div.content.span10
    a.title {{edge.source1.title}}
      a(href="{{node.url}}")
        img(src="/img/openInNewWindow.png", width="18px")
    div.lineSeperator
    p.body
      span
        small {{edge.source1.body}}
    p.tagLine
      p.knowledgeDomain
        small {{edge.source1.knowledgeDomain}}
      span.resourceType
        small [ {{edge.source1.resourceType}} ]&nbsp;

  div
    a.addButton.clicker(onclick="return toggle('popover');")
      img(src="/img/addIcon.png", width="20px", class="example"))
      div.popup.popover.fade.right.in(id="popover")
        div.arrow
        div.popover-inner
          h3.popover-title Input as
          img(src="img/inputAsNodes.png", style="float:left; margin-top:6px;")
          div.popover-content Node1
          div.popover-content Node2
          div.popover-content Set a parallel link

