.left-align.span12
  div.map.span1#map
    a(ng-href="/article/:{{knownode.article.KN_ID}}")
      img(src="/img/node.png")
  div.resourcecontent.span10#content
    a.title(ng-href="/article/:{{knownode.article.KN_ID}}") {{knownode.article.title}}
      a(ng-href="{{knownode.article.url}}", target="_blank")
        img(src="/img/openInNewWindow.png", width="18px")
    div.lineSeperator
    p.body
      span
        small {{knownode.article.bodyText}}
    p.tagLine
      p.knowledgeDomain
        small ?? {{}}
      span.resourceType
        small [ ?? {{}} ]&nbsp;
  div.span1.buttonhack
    a.addButton.clicker(href="javascript:void(0);", ng-click="showtoggle2 = plusToggle('show')")
      img(src="/img/addIcon.png", class="example")
    div.popover.fade.right.in.hide(id="popover", ng-class="showtoggle2")
      div.arrow
      div.popover-inner
        h3.popover-title Input as
        img(src="img/inputAsNodes.png", style="float:left; margin-top:6px;")
        div.popover-content.hover(ng-click="inputNode(1)") Node1
        div.popover-content.hover(ng-click="inputNode(2)") Node2
        div.popover-content.hover(ng-click="inputNode(3)") Set a parallel link
